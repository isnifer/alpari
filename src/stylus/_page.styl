/* Обвязка */
html, body
  height 100%
  font normal 16px "PT Sans", Verdana, Tahoma

.page
  position relative

  ul
    margin 0
    list-style none
    font-size 2.5em
    border 2px solid #fff

    &.added-2nd, &.added-3rd 
      border 2px dashed red

    &.added-3rd
      background rgb(223, 182, 182)

    li
      padding 10px 0
      margin-top 5px
      background #a7a7a7
      text-align center
      cursor move
      border 2px solid #a7a7a7

      &:first-child
        margin 0

      &.over
        border 2px dashed green

.add-list
  margin 10px
  position relative
  z-index 99